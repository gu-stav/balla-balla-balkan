---
import { PortableText } from "astro-portabletext";

const { authors } = Astro.props;
---

<div class="bg-red flex gap-12 justify-center p-12 text-white w-full">
	{authors.map((author) => (
		<div class="flex flex-col gap-4 max-w-lg">
			<h3 class="font-medium text-3xl tracking-tighter">{author.title}</h3>
			<PortableText value={author.body} />
		</div>
	))}
</div>
