---

import { getAuthors } from "../utils/authors";
import { getEpisodes } from "../utils/episodes";
import Layout from "../layouts/Layout.astro";
import Authors from "../components/Authors.astro";
import EpisodeLatest from "../components/EpisodeLatest.astro";
import Episode from "../components/Episode.astro";

const episodes = await getEpisodes();
const authors = await getAuthors();

---
<Layout>
	<div class="flex flex-col gap-8 items-center pb-24 w-full">
		<ol class="flex flex-col gap-4 w-full">
			{episodes.map((episode, index) => (
				<li class="flex justify-center w-full">
					{index === 0 ? <EpisodeLatest episode={episode} /> : <Episode episode={episode} />}
				</li>
			))}
		</ol>

		<a href="/episoden" class="font-medium text-2xl tracking-tighter underline">
			Alle Episoden
		</a>
	</div>

	<Authors authors={authors} />
</Layout>
