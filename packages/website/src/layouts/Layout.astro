---
import '../styles/global.css'

import Logo from '../components/Logo.astro'
import { getSettings } from '../utils/settings';
import Player from '../components/Player.svelte';

const settings = await getSettings();
const { title } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="description" content={settings.description} />
		<title>{title ? `${title} | ` : ''} {settings.title}</title>
	</head>

	<body class="bg-gray">
        <header class="bg-red flex justify-center px-2 pt-3 pb-24">
            <nav class="flex gap-8 items-end max-w-3xl">
                <a class="font-sans text-2xl text-white" href="/episoden">Alle Episoden</a>

                <a href="/">
                    <Logo class="fill-white -mb-7 w-72" />
                </a>

                <a class="font-sans text-2xl text-white" href="/unterstuetzen">Unterstützen</a>
            </nav>
        </header>

        <main class="flex flex-col items-center w-full">
          <slot />
        </main>

        <footer class="flex justify-center p-10">
            <nav class="flex gap-8 max-w-3xl">
                <a class="font-medium text-red" href="/impressum">Impressum</a>
                <a class="font-medium text-red" href="/datenschutzerklaerung">Datenschutz</a>
                <a class="font-medium text-red" href="/unterstuetzen">Unterstützen</a>
            </nav>
        </footer>

        <Player client:load />
	</body>
</html>
