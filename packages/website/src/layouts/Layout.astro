---
import '../styles/global.css'
import { getSettings } from '../utils/settings';
import Header from '../components/Header.astro';
import Player from '../components/Player.svelte';
import { undefined } from 'astro:schema';

const settings = await getSettings();
const { title, description, image } = Astro.props

const ogImage = image ? image : settings.ogImageFallback ? `${settings?.ogImageFallback}?h=630&w=1280` : undefined;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="description" content={description ?? settings?.description} />
        <meta name="og:title" content={title ? `${title} | ${settings?.title}` : settings?.title} />
        <meta name="og:description" content={description ?? settings?.description} />
        {ogImage && <meta name="og:image" content={ogImage} />}
		<title>{title ? `${title} | ` : ''} {settings?.title}</title>
	</head>

	<body class="bg-gray">
        <Header />

        <main class="flex flex-col items-center w-full">
          <slot />
        </main>

        <footer class="flex justify-center p-10">
            <nav class="flex gap-8 max-w-3xl">
                <a class="font-medium text-red hover:underline" href="/impressum">Impressum</a>
                <a class="font-medium text-red hover:underline" href="/datenschutzerklaerung">Datenschutz</a>
                <a class="font-medium text-red hover:underline" href="/unterstuetzen">Unterst√ºtzen</a>
            </nav>
        </footer>

        <Player client:load />
	</body>
</html>
